%h1 Users#index
%p Find me in app/views/users/index.html.haml

%table.table.table-striped.table-bordered
  %thead
    %tr
      %th #
      %th username
      / %th email
      / %th encrypted_password
      / %th last_sign_in_at
      / %th last_sign_in_ip
      %th roles
      %th
      %th
      %th
        
  %tbody
    - @users.each do |user|
      %tr
        %td= user.id
        %td= user.username
        / %td= user.email
        / %td= user.encrypted_password
        / %td= user.last_sign_in_at
        / %td= user.last_sign_in_ip
        %td= user.roles_name.join('|') unless user.roles.first.nil?
        %td= link_to 'Show', admin_user_path(user)
        %td= link_to 'Edit', edit_admin_user_path(user)
        %td= link_to 'Destroy', admin_user_path(user), :method => :delete, :data => { :confirm => 'Are you sure?' }

